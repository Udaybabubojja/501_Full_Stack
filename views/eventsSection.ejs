<% if (userCreatedEvents.length > 0) { %>
    <div class="mb-8">
        <h2 class="text-2xl font-semibold mb-4">Events Created by You</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% userCreatedEvents.forEach(event => { %>
                <div class="bg-white p-6 rounded-md shadow-md relative">
                    <h3 class="text-xl font-semibold mb-4"><%= event.eventName %></h3>
                    <p class="text-gray-700 mb-4">Created by: <%= event.email %></p>
                    <h4 class="text-md font-semibold mb-2">Enrolled Users:</h4>
                    <ul class="list-disc pl-5 mb-4">
                        <% event.users.forEach(user => { %>
                            <li class="mb-2 flex justify-between">
                                <div>
                                    <p><span class="font-semibold">Name:</span> <%= user.name %></p>
                                    <p><span class="font-semibold">Email:</span> <%= user.email %></p>
                                </div>
                                <button class="text-red-500 hover:text-red-700" onclick="removeUser('<%= user.email %>')">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" id="delete"><path d="M12 38c0 2.21 1.79 4 4 4h16c2.21 0 4-1.79 4-4V14H12v24zM38 8h-7l-2-2H19l-2 2h-7v4h28V8z"></path><path fill="none" d="M0 0h48v48H0z"></path></svg>
                                </button>
                            </li>
                        <% }); %>
                    </ul>
                    <% event.teams.forEach(team => { %>
                        <div class="border border-gray-300 rounded-md p-4 mb-4 relative">
                            <button class="absolute top-0 right-0 text-red-500 hover:text-red-700" onclick="removeTeam('<%= team.name %>')">
                                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" id="delete"><path d="M12 38c0 2.21 1.79 4 4 4h16c2.21 0 4-1.79 4-4V14H12v24zM38 8h-7l-2-2H19l-2 2h-7v4h28V8z">
                                </path><path fill="none" d="M0 0h48v48H0z"></path></svg>
                            </button>
                            <h4 class="text-lg font-semibold mb-2">Team: <%= team.name %></h4>
                            <ul class="list-disc pl-5">
                                <% team.memberEmails.forEach(memberEmail => { %>
                                    <li class="mb-2">
                                        <p><span class="font-semibold">Email:</span> <%= memberEmail %></p>
                                        <!-- You can add more information about team members if needed -->
                                    </li>
                                <% }); %>
                            </ul>
                        </div>
                    <% }); %>
                </div>
            <% }); %>
        </div>
    </div>
<% } else { %>
    <p class="text-gray-500">You haven't created any events yet.</p>
<% } %>

