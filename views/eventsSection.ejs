<!-- views/eventsSection.ejs -->
<% if (userCreatedEvents.length > 0) { %>
    <div class="mb-8">
        <h2 class="text-2xl font-semibold mb-4">Events Created by You</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% userCreatedEvents.forEach(event => { %>
                <div class="bg-white p-6 rounded-md shadow-md">
                    <h3 class="text-xl font-semibold mb-4"><%= event.eventName %></h3>
                    <p class="text-gray-700 mb-4">Created by: <%= event.email %></p>
                    <h4 class="text-md font-semibold mb-2">Enrolled Users:</h4>
                    <ul>
                        <% const enrolledUsers = userCreatedEvents %>
                        <% enrolledUsers.forEach(user => { %>
                            <li class="flex items-center mb-2">
                                <span class="mr-2"><%= user.name %> - <%= user.email %> - <%= user.phone %></span>
                                <form method="post" action="/removeUser/<%= user.eventId %>/<%= user.id %>" class="float-right">
                                    <button type="submit" class="trash-icon px-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12H9m12 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                                        </svg>
                                    </button>
                                </form>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            <% }); %>
        </div>
    </div>
<% } else { %>
    <p class="text-gray-500">You haven't created any events yet.</p>
<% } %>
