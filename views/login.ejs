<!DOCTYPE html>
<html lang="en">

<head>
    <title>TO-DO Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body class="bg-gray-200">
    <div class="container mx-auto flex justify-center items-center h-screen">
        <div class="bg-white p-8 rounded-lg shadow-md">
            <h6 class="text-lg font-semibold mb-4">Login to your account</h6>

            <% if (errors && errors.length > 0) { %>
                <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4" role="alert">
                    <p class="font-bold">Oops! Something went wrong:</p>
                    <ul>
                        <% errors.forEach(error => { %>
                            <li><%= error.message %></li>
                        <% }); %>
                    </ul>
                </div>
            <% } %>

            <form action="/login" method="post" class="space-y-4">
                <div>
                    <label for="email" class="block">Email: </label>
                    <input type="email" name="email" class="border border-gray-400 rounded-md p-2 w-full">
                </div>
                <div>
                    <label for="password" class="block">Password: </label>
                    <input type="password" name="password" class="border border-gray-400 rounded-md p-2 w-full">
                </div>
                <div>
                    <button type="submit" class="bg-blue-500 text-white font-semibold py-2 px-4 rounded-md hover:bg-blue-600 transition duration-300">Login</button>
                </div>
                <p class="text-sm mt-2">Don't have an account? <a href="/signup" class="text-blue-600 font-semibold">Signup</a></p>
            </form>
        </div>
    </div>
</body>

</html>
