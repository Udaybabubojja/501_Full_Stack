<!-- views/joinAsTeam.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Join as Team</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>

<body class="bg-gray-100 p-8">
  <div class="mt-8 flex justify-end">
    <!-- Your Sign Out button here -->
    <form action="/logout" method="post">
      <button class="bg-red-500 text-white p-2 rounded">Sign Out</button>
    </form>
    
  </div>

  <div class="mt-8">
    <form action="/submitTeam" method="post">
      <label for="teamName" class="block text-sm font-medium text-gray-700">Team Name:</label>
      <input type="text" id="teamName" name="teamName" class="mt-1 p-2 border rounded-md w-full">

      <div id="members-container" class="mt-4 space-y-4">
        <% for (let i = 1; i <= maxTeamSize; i++) { %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4" id="member<%= i %>">
            <div>
              <label for="memberName<%= i %>" class="block text-sm font-medium text-gray-700">Member Name:</label>
              <input type="text" id="memberName<%= i %>" name="memberName[]" class="mt-1 p-2 border rounded-md w-full">
            </div>

            <div>
              <label for="memberEmail<%= i %>" class="block text-sm font-medium text-gray-700">Member Email:</label>
              <input type="email" id="memberEmail<%= i %>" name="memberEmail[]" class="mt-1 p-2 border rounded-md w-full">
            </div>

            <div>
              <label for="memberPhone<%= i %>" class="block text-sm font-medium text-gray-700">Member Phone:</label>
              <input type="tel" id="memberPhone<%= i %>" name="memberPhone[]" class="mt-1 p-2 border rounded-md w-full">
            </div>
          </div>
        <% } %>
      </div>

      <button type="submit" class="mt-4 bg-green-500 text-white p-2 rounded">Submit Team</button>
    </form>
  </div>
</body>

</html>
