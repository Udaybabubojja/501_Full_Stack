<% if (userEnrolledEvents.length > 0) { %>
    <div class="mt-8">
        <h2 class="text-2xl font-semibold mb-4">Events You're Enrolled In</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% userEnrolledEvents.forEach(user => { %>
                <div class="bg-white p-6 rounded-md shadow-md">
                    <h3 class="text-lg font-semibold mb-2">
                        <%= user.event.eventName %>
                        <form method="post" action="/removeUser/<%= user.eventId %>/<%= user.id %>" class="float-right">
                            <button type="submit" class="trash-icon px-2">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12H9m12 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                                </svg>
                            </button>
                        </form>
                    </h3>
                    <p class="text-gray-700 mb-4">Created by: <%= user.event.email %></p>
                    <p class="text-gray-700 mb-4">Your details: <%= user.name %> - <%= user.email %> - <%= user.phone %></p>
                </div>
            <% }); %>
        </div>
    </div>
<% } else { %>
    <p class="text-gray-500 mt-8">You're not enrolled in any events.</p>
<% } %>
