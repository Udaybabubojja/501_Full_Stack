<% if (userJoinedEvents.length > 0) { %>
    <div class="mt-8">
        <h2 class="text-2xl font-semibold mb-4">Events You're Enrolled In</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% userJoinedEvents.forEach(user => { %>
                <div class="bg-white p-6 rounded-md shadow-md">
                    <h3 class="text-lg font-semibold mb-2">
                        <%= user.event.eventName %>
                        <!-- Delete User Enrollment Button -->
                        <form method="post" action="/removeUser/<%= user.id %>" class="float-right">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button type="submit" class="trash-icon px-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="18" viewBox="0 0 24 18" id="delete"><g fill="none" fill-rule="evenodd" stroke-linecap="round" stroke-linejoin="round"><g stroke="#000" stroke-width="2" transform="translate(-1441 -1567)"><g transform="translate(1442 1568)"><path d="M20 0H7L0 8l7 8h13a2 2 0 002-2V2a2 2 0 00-2-2zM17 5l-6 6M11 5l6 6"></path></g></g></g></svg>

                            </button>
                        </form>
                    </h3>
                    <p class="text-gray-700 mb-4">Created by: <%= user.event.email %></p>
                    <!-- Add more details here as needed -->
                </div>
            <% }); %>
        </div>
    </div>
<% } else { %>
    <p class="text-gray-500 mt-8">You're not enrolled in any events.</p>
<% } %>
